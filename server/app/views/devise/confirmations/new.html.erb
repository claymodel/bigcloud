<header class="page-header"><h2>Resend confirmation instructions</h2></header>

<div class="row">
  <div class="span12">
    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "well" }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <br/>
      <button type="submit" class="btn btn-primary">Resend confirmation instructions</button>
    <% end %>

    <%= render "links" %>
  </div>
</div>
